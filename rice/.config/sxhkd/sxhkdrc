# Using `hyper` as a dummy placeholder that can never be pressed on normal keyboard

### Launch

# Main menu
super + space
  rice-menu-root
# Run menu (execute)
super + e
  rice-menu-run
# Terminal
super + Return
  $TERMINAL

# Emoji Picker
super + semicolon
  rice-menu-root emoji-picker

# Firefox
# super + shift + n
  # firefox
# super + shift + p
  # firefox --private-window

### Session

# Lock screen
super + escape
  rice-menu-root lock-screen

# Should not be needed if the lid closed auto suspend works
# Sleep (suspend)
super + ctrl + q
  rice-menu-root suspend

### Window management

# Close window
super + q
  rice-menu-root wm-window-close
# Force close window
super + shift + q
  true

# Switch to another app
alt + tab
  true
# Switch to another window for current app
alt + grave
  true

# Focus next by index
super + j
   rice-menu-root wm-focus-next-by-index
# Focus prev by index
super + k
   rice-menu-root wm-focus-prev-by-index
# Swap with next window
super + shift + j
   rice-menu-root wm-swap-next-by-index
# Swap with prev window
super + shift + k
   rice-menu-root wm-swap-prev-by-index

# or super + comma
# Increase number of masters
super + l
  rice-menu-root wm-increase-master-clients
# or super + period
# Decrease number of masters
super + h
  rice-menu-root wm-decrease-master-clients

# Move as master
super + m
  true

# Increase master width
super + shift + l
  rice-menu-root wm-increase-master-width
# Decrease master widrh
super + shift + h
  rice-menu-root wm-decrease-master-width

# Focus next screen
super + ctrl + j
  rice-menu-root wm-focus-next-screen
# Focus prev screen
super + ctrl + k
  rice-menu-root wm-focus-prev-screen

# Next layout
super + v
  rice-menu-root wm-next-layout
# Prev layout
super + shift + v
  rice-menu-root wm-prev-layout

# Toggle fulscreen (monocle)
super + f
  rice-menu-root wm-toggle-fullscreen
# Toggle tiling / stacking
super + t
  true


# Go to tag {1-9}
super + {1-9}
  true
# Move window to tag {1-9}
super + shift + {1-9}
  true
# Carry window to tag {1-9}
super + ctrl + {1-9}
  true
# View next tag
super + Tab
  rice-menu-root wm-view-next-tag
# View previous tag
super + shift + Tab
  rice-menu-root wm-view-prev-tag
# View last tag
hyper
  rice-menu-root wm-view-last-tag

### Configure

# Control center
super + c; c
  gnome-control-center

# Reload config
super + c; r
  rice-menu-root wm-restart

### Appearance
# super + v (visual)


### Sound

# Volume down
XF86AudioLowerVolume
	rice-menu-root volume-down
# Volume uo
XF86AudioRaiseVolume
	rice-menu-root volume-up
# Mute
XF86AudioMute
 	rice-menu-root mute

### Player

# Player Play/Pause
super + z
  rice-menu-root player-play-pause
# Player play
XF86AudioPlay
  playerctl play
# Player pause
XF86AudioPause
  playerctl pause
# Player next
XF86AudioNext
  playerctl next
# Player prev
XF86AudioPrev
  playerctl previous

### Display

# Brightness down
XF86MonBrightnessDown
  rice-menu-root brightness-down
# Brightness up
XF86MonBrightnessUp
  rice-menu-root brightness-up
